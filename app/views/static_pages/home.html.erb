<% provide :title, t(".title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "layouts/shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "layouts/shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "layouts/shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t(".micropost_feed") %></h3>
      <%= render "layouts/shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t(".header1") %></h1>
    <h2>
      <%= t(".header2a") %>
      <%= link_to t(".header2b"), Settings.url.rails_home %>
      <%= t(".header2c") %>
    </h2>
    <%= link_to t(".signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
