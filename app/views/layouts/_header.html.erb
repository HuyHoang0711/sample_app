<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="nav navbar-nav navbar-left language">
    <%= link_to "en", locale: :en %> |
    <%= link_to "vi", locale: :vi %>
  </div>
  <div class="container">
    <%= link_to t(".logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".menu_home"), home_static_pages_path %></li>
        <li><%= link_to t(".menu_help"), help_static_pages_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".user"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t(".account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= button_to t(".logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".menu_login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
